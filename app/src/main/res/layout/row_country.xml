<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ECA63F">


    <TextView
        android:id="@+id/textViewNameEs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name Es"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameEs">

        <TextView
            android:id="@+id/textViewContinentEs"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Continent Es" />

        <TextView
            android:id="@+id/textViewCapitalEs"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Capital Es" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textViewDialCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Dial Code" />

        <TextView
            android:id="@+id/textViewCode2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Code 2" />

        <TextView
            android:id="@+id/textViewCode3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Code 3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/textViewTLD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TLD" />

        <TextView
            android:id="@+id/textViewKm2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="km2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>